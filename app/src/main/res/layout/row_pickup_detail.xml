<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:elevation="@dimen/card_elevation_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/view_padding_small">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/view_right_margin_small"
            android:background="@drawable/bg_rect_black_box"
            android:gravity="center">

            <ImageView
                android:id="@+id/waste_stream_image"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/waste_stream_name"
                style="@style/CustomTextViewMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_very_small"
                android:text="Protea Hotel" />

            <TextView
                android:id="@+id/quantity"
                style="@style/CustomTextViewMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protea Hotel"
                android:textColor="@color/colorPrimaryGreen" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>