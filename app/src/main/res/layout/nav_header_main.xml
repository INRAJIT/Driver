<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingLeft="@dimen/nav_header_horizontal_margin"
    android:paddingTop="@dimen/nav_header_vertical_margin"
    android:paddingRight="@dimen/nav_header_horizontal_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_bottom_margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_right_margin_default"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/CustomTextViewMediumBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_medium"
                android:text="@string/nav_header_title"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/email"
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableTint="@android:color/white"
                android:text="@string/nav_header_subtitle"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/license_no"
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_medium"
                android:drawableLeft="@drawable/ic_licence"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableTint="@android:color/white"
                android:text="NIG9820456ST"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/profile"
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile"
                android:textColor="@drawable/textview_selector" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/status_indicator"
            android:layout_width="@dimen/status_width_height"
            android:layout_height="@dimen/status_width_height"
            android:layout_marginRight="@dimen/view_right_margin_medium"
            android:background="@drawable/status_indicator_green"></ImageView>

        <TextView
            android:id="@+id/status"
            style="@style/CustomTextViewMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/view_right_margin_medium"/>

        <ImageView
            android:layout_width="@dimen/status_width_height"
            android:layout_height="@dimen/status_width_height"
            android:background="@drawable/ic_dropdown"></ImageView>

    </LinearLayout>

</LinearLayout>
