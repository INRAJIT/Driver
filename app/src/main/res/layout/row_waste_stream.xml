<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/view_bottom_margin_medium">

    <TextView
        android:id="@+id/waste_stream_name"
        style="@style/CustomTextViewLargeBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_bottom_margin_medium"
        android:text="@string/order_type_plastic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_bottom_margin_medium"
        android:gravity="center_vertical">

        <TextView
            style="@style/CustomTextViewMediumBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_of_bags_collected" />

        <EditText
            android:id="@+id/quantity"
            style="@style/CustomEditText"
            android:layout_width="@dimen/bag_box_width"
            android:layout_height="@dimen/bag_box_height"
            android:background="@drawable/rounded_corner_grey_box"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"></EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorTextGrey"></View>

</LinearLayout>