<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation_medium"
    android:layout_marginBottom="@dimen/view_bottom_margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/view_padding_medium">

        <TextView
            android:id="@+id/bag_name"
            style="@style/CustomTextViewMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_bottom_margin_small"
            android:text="BAG 1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_bottom_margin_small"
            android:gravity="center_vertical">

            <TextView
                style="@style/CustomTextViewSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textColor="@color/colorTextGrey" />

            <EditText
                android:id="@+id/weight_in_kg"
                style="@style/CustomEditText"
                android:layout_width="@dimen/bag_box_width"
                android:layout_height="@dimen/bag_box_height"
                android:background="@drawable/rounded_corner_grey_box"
                android:gravity="center"
                android:maxLength="3"
                android:imeOptions="actionNext"
                android:inputType="number"></EditText>

            <TextView
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/view_padding_small"
                android:layout_marginRight="@dimen/view_right_margin_medium"
                android:text="kg"
                android:textColor="@color/colorTextGrey" />

            <EditText
                android:id="@+id/weight_in_gm"
                style="@style/CustomEditText"
                android:layout_width="@dimen/bag_box_width"
                android:layout_height="@dimen/bag_box_height"
                android:background="@drawable/rounded_corner_grey_box"
                android:gravity="center"
                android:maxLength="2"
                android:imeOptions="actionNext"
                android:inputType="number"></EditText>

            <TextView
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/view_padding_small"
                android:text="gm"
                android:textColor="@color/colorTextGrey" />

        </LinearLayout>

        <TextView
            android:id="@+id/scan_barcode"
            style="@style/CustomTextViewSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_barcode"
            android:textColor="@drawable/textview_selector" />


    </LinearLayout>

</androidx.cardview.widget.CardView>