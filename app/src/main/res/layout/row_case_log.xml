<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_row_margin"
    android:background="@android:color/white"
    android:elevation="@dimen/card_elevation_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewLine"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryGreen"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/view_padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/category"
                    style="@style/CustomTextViewMediumBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view_bottom_margin_small"
                    android:layout_weight="1"
                    android:text="GPS Device" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_grey_box"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_padding_small"
                    android:paddingTop="@dimen/view_padding_very_small"
                    android:paddingRight="@dimen/view_padding_small"
                    android:paddingBottom="@dimen/view_padding_very_small">

                    <ImageView
                        android:id="@+id/statusIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginRight="@dimen/view_right_margin_very_small"
                        android:background="@drawable/status_indicator_primary_green"></ImageView>

                    <TextView
                        android:id="@+id/statusInfo"
                        style="@style/CustomTextViewVerySmallBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESOLVED"
                        android:textColor="@color/colorPrimaryGreen" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/comments"
                style="@style/CustomTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_very_small"
                android:text="2 Assibifi Road, Agidingbi, Ikeja, Lagos 2 Assibifi Road, Agidingbi, Ikeja, Lagos"
                android:textColor="@color/colorTextGrey" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/view_bottom_margin_very_small"
                android:background="@color/colorTextGrey"></View>

            <TextView
                android:id="@+id/date"
                style="@style/CustomTextViewVerySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="@dimen/drawable_padding"
                android:text="20-01-2019"
                android:layout_gravity="right"
                android:textColor="@color/colorTextGrey" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>