<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_bottom_margin_small"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/container_name"
        style="@style/CustomTextViewMediumBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/wheeler_bin" />

    <EditText
        android:id="@+id/container_quantity"
        style="@style/CustomEditText"
        android:layout_width="@dimen/bag_box_width"
        android:layout_height="@dimen/bag_box_height"
        android:background="@drawable/rounded_corner_grey_box"
        android:gravity="center"
        android:maxLength="3"
        android:inputType="number"></EditText>

</LinearLayout>

