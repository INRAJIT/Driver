<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBoxBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:padding="@dimen/view_padding_default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_medium"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="@dimen/view_right_margin_default"
                    android:contentDescription="@string/nav_header_desc"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        style="@style/CustomTextViewMediumBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/view_bottom_margin_medium"
                        android:text="@string/nav_header_title"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/email"
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mail"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableTint="@android:color/white"
                        android:text="@string/nav_header_subtitle"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/phone"
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableTint="@android:color/white"
                        android:text="000 00000 00000"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/license_no"
                    style="@style/CustomTextViewSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_license"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:text="NIG9820456ST"
                    android:textColor="@color/colorTextGrey" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryGreen"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/dob"
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_dob"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:gravity="end"
                        android:text="07-04-1987"
                        android:textColor="@color/colorTextGrey" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/view_padding_default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_bottom_margin_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextViewMediumBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_right_margin_small"
                    android:drawableLeft="@drawable/ic_recycle_bin"
                    android:drawablePadding="@dimen/drawable_padding_medium"
                    android:drawableTint="@color/colorPrimaryGreen"
                    android:text="@string/waste_stream" />

                <TextView
                    style="@style/CustomTextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastic, Cardboard, Papers" />

            </LinearLayout>

            <TextView
                style="@style/CustomTextViewMediumBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/drawable_padding_medium"
                android:drawableTint="@color/colorPrimaryGreen"
                android:text="@string/zone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_top_margin_medium"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_right_margin_small"
                    android:background="@android:color/white"
                    app:cardElevation="@dimen/card_elevation_medium">

                    <TextView
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_padding_medium"
                        android:paddingTop="@dimen/view_padding_very_small"
                        android:paddingRight="@dimen/view_padding_medium"
                        android:paddingBottom="@dimen/view_padding_very_small"
                        android:text="Apapap"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_right_margin_small"
                    android:background="@android:color/white"
                    app:cardElevation="@dimen/card_elevation_medium">

                    <TextView
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_padding_medium"
                        android:paddingTop="@dimen/view_padding_very_small"
                        android:paddingRight="@dimen/view_padding_medium"
                        android:paddingBottom="@dimen/view_padding_very_small"
                        android:text="Angel Court"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:cardElevation="@dimen/card_elevation_medium">

                    <TextView
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_padding_medium"
                        android:paddingTop="@dimen/view_padding_very_small"
                        android:paddingRight="@dimen/view_padding_medium"
                        android:paddingBottom="@dimen/view_padding_very_small"
                        android:text="Elion House"></TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_top_margin_small"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_right_margin_small"
                    android:background="@android:color/white"
                    app:cardElevation="@dimen/card_elevation_medium">

                    <TextView
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_padding_medium"
                        android:paddingTop="@dimen/view_padding_very_small"
                        android:paddingRight="@dimen/view_padding_medium"
                        android:paddingBottom="@dimen/view_padding_very_small"
                        android:text="Fantasy Lane"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_right_margin_small"
                    android:background="@android:color/white"
                    app:cardElevation="@dimen/card_elevation_medium">

                    <TextView
                        style="@style/CustomTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/view_padding_medium"
                        android:paddingTop="@dimen/view_padding_very_small"
                        android:paddingRight="@dimen/view_padding_medium"
                        android:paddingBottom="@dimen/view_padding_very_small"
                        android:text="Lagos"></TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_padding_default"
        android:paddingTop="@dimen/view_padding_small"
        android:paddingRight="@dimen/view_padding_default"
        android:paddingBottom="@dimen/view_padding_default"
        app:behavior_hideable="false"
        app:behavior_peekHeight="32dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="35dp"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/view_bottom_margin_very_small"
            android:background="@color/colorTextGrey"></View>

        <View
            android:layout_width="35dp"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/view_bottom_margin_medium"
            android:background="@color/colorTextGrey"></View>

        <TextView
            android:id="@+id/driving_licence"
            style="@style/CustomTextViewMediumBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_driving_licence"
            android:drawablePadding="@dimen/drawable_padding_medium"
            android:gravity="center_vertical"
            android:text="@string/driving_licence" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBoxBg"></View>

        <TextView
            android:id="@+id/my_vehicle"
            style="@style/CustomTextViewMediumBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_vehicle"
            android:drawablePadding="@dimen/drawable_padding_medium"
            android:gravity="center_vertical"
            android:text="@string/my_vehicle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBoxBg"></View>

        <TextView
            android:id="@+id/change_password"
            style="@style/CustomTextViewMediumBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_change_password"
            android:drawablePadding="@dimen/drawable_padding_medium"
            android:gravity="center_vertical"
            android:text="@string/change_password" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBoxBg"></View>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>